/* 容器样式 */
.login-container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 认证卡片 */
.auth-card {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.08);
  padding: 48rpx 40rpx;
}

/* 头部样式 */
.auth-header {
  text-align: center;
  margin-bottom: 64rpx;
}

.auth-title {
  display: block;
  font-size: 40rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.auth-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 表单项 */
.form-item {
  margin-bottom: 48rpx;
  position: relative;
}

.form-label {
  display: block;
  font-size: 30rpx;
  color: #34495e;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-input {
  height: 88rpx;
  font-size: 32rpx;
  color: #2c3e50;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

.input-placeholder {
  color: #bdc3c7;
  font-size: 30rpx;
}

.input-border {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2rpx;
  background: #3498db;
  transition: all 0.3s ease;
}

.form-input:focus + .input-border {
  width: 100%;
}

/* 按钮样式 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 68rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  transition: all 0.3s ease;
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
}

/* 操作链接 */
.action-links {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.link-item {
  color: #7f8c8d;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  transition: all 0.2s ease;
}

.link-hover {
  color: #3498db;
}

.divider {
  color: #bdc3c7;
  margin: 0 16rpx;
}

/* 模态框样式 */
.modal-content {
  padding: 32rpx 0;
  font-size: 30rpx;
  color: #2c3e50;
  text-align: center;
}
/* WXSS 新增样式 */
.password-toggle {
  position: absolute;
  right: 20rpx;
  top: 75%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}

.toggle-icon {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.form-item {
  position: relative;
}