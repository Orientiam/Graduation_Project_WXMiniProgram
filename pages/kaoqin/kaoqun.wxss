/* 新增样式 */
:root {
  --primary-color: #0079d7;
  --success-color: #52c41a;
  --error-color: #ff4d4f;
  --text-primary: #2c3e50;
  --text-secondary: #95a5a6;
  --border-radius: 16rpx;
  --box-shadow: 0 8rpx 24rpx rgba(0,121,215,0.08);
}

.upload-container {
  padding: 40rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.upload-card {
  background: #fff;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  padding: 40rpx;
}

.upload-header {
  font-size: 36rpx;
  color: var(--text-primary);
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.upload-area {
  height: 400rpx;
  background: #fafafa;
  border: 2rpx dashed #d9d9d9;
  border-radius: var(--border-radius);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.upload-area:active {
  background: #f0f9ff;
  border-color: var(--primary-color);
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.upload-tips {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.6;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: var(--border-radius);
}

.reupload-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  padding: 16rpx;
}

.location-card {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.location-card.error {
  border-color: var(--error-color);
  background: #fff2f0;
}

.location-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.location-info {
  flex: 1;
}

.location-title {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.location-detail {
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.4;
}

.location-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.refresh-btn {
  width: 20rpx;
  height: 64rpx;
  padding: 0;
  background: #fff !important;
  border: 2rpx solid #e8e8e8 !important;
  border-radius: 50%;
  margin-left: 24rpx;
}

.refresh-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-group {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.action-btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--primary-color), #0063b5);
  color:black;
}

.action-btn.secondary {
  background: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.action-btn[disabled] {
  opacity: 0.6;
  filter: grayscale(0.5);
}

.toast-message {
  /* 保持与之前优化一致的toast样式 */
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

