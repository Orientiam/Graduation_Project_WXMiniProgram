.content{
  display: flex;
  width: 100%;
  flex-direction: column;
  background: #f3f3f3;
  min-height: 1335rpx;
}
.btn {
  margin-top: 40rpx;
  width: 400rpx;
  border-radius: 30rpx;
  background: #0079d7;
  color: #fff;
  line-height: 2;
  font-size: 32rpx;
}
.header{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #0079d7;
  font-size: 32rpx;
}
.newContent {
  width: 100%;
  box-sizing: border-box;
  padding: 26rpx 34rpx;
}
.newContent_item {
  background: #fff;
  height: 190rpx;
  font-size: 24rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius:30rpx; 
  margin-bottom:30rpx; 
  position: relative;

}

.newContent_item_1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 48rpx; 
}
.newContent_item_1_left {
  font-size: 24rpx;
}
.newContent_item_2 {
  line-height: 48rpx;
  color: #000000;
  width: 100%;
}
.newContent_item_2 text{
  font-size: 28rpx;
  width: 88%;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
