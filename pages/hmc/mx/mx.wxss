.btn {
  margin-top: 24rpx;
  width: 400rpx;
  border-radius: 30rpx;
  background: #0079d7;
  color: #fff;
  line-height: 2;
  font-size: 32rpx;
}
.title{
  text-align: center;
  font-size: 32rpx;
  background:#0079d7;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
}
.img {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0rpx;
}

.img image {
  width: 100%;
}

.text {
  margin: 20rpx 0rpx;
  font-size: 25rpx;
}
.section{
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.content {
  box-sizing: border-box;
  width: 100%;
}
.input-group{
  border-bottom:2rpx #e8e8e8 solid;
  padding: 12rpx 30rpx;
  height: 60rpx;
  line-height: 60rpx; 
  display: flex;
}
.input-group-tit{
  font-size: 28rpx;
   color: #333;
   line-height: 35rpx; 
   width: 120rpx;
   text-align: right;
}
.input_name{
  font-size: 28rpx;
  color: #333;
  line-height: 35rpx; 
  padding-left: 20rpx;
  width: 400rpx;
}
.input {
  width: 450rpx;
  font-size: 28rpx;
  color: #888;
  position: relative;
  line-height: 35rpx;
}